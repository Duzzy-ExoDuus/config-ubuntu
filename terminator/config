# Install Terminator and run:
#   $ mkdir ~/.config/terminator/
#   $ touch ~/.config/terminator/config
#   Paste below for the settings and restart terminator.

[global_config]
  title_transmit_bg_color = "#077a00"
  title_inactive_fg_color = "#e1e1e1"
  handle_size = -3
  title_inactive_bg_color = "#424242"
[keybindings]
  go_up = <Ctrl>k
  split_horiz = <Primary>minus
  new_terminator = <Primary><Shift>n
  go_down = <Ctrl>j
  close_term = <Ctrl><Alt>w
  split_vert = <Primary>equal
  go_right = <Ctrl>l
  new_tab = <Primary>t
  go_left = <Ctrl>h
[profiles]
  [[default]]
    background_darkness = 0.93
    scrollback_lines = 10000
    background_type = transparent
    background_image = None
[layouts]
  [[default]]
    [[[child1]]]
      type = Terminal
      parent = window0
      profile = default
      command = ""
    [[[window0]]]
      type = Window
      parent = ""
[plugins]
